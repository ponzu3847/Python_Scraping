  .modal-lg {
    width: 80% !important;
  }
  .modal-body-splus {
    height: 628px;
  }
  .modal-row, .splus-ga-main-image-block {
    height: 100%;
  }
  #splus-ga-image-zoom {
    height: 100%;
  }
  .splus-ga-main-image-block {
    text-align: center;
  }
}
